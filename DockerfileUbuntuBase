FROM ubuntu:14.04
MAINTAINER Harkeet Bajaj <harkeet.bajaj@gmail.com>

ENV DEBIAN_FRONTEND=noninteractive LANG=en_US.UTF-8 LC_ALL=C.UTF-8 LANGUAGE=en_US.UTF-8

# Update and Upgrade the repository sources list
RUN apt-get update
RUN [ "apt-get", "-qy", "--force-yes", "upgrade" ]
RUN [ "apt-get", "-qy", "--force-yes", "dist-upgrade" ]

# Install compiler and perl stuff
RUN apt-get install --yes \
 build-essential \
 gcc-multilib \
 apt-utils \
 perl \
 expat \
 libexpat-dev

# Install perl modules
RUN apt-get install -y cpanminus

RUN cpanm CPAN::Meta \
 Net::SNMP \
 POSIX \
 strict \
 threads \
 Thread::Queue \
 Thread::Semaphore \
 threads::shared

# Test BP
RUN cpanm warnings \
 Fcntl

# Install related DB modules
RUN apt-get install --yes \
 libdbd-mysql \
 libdbd-mysql-perl \
 libdbd-pgsql \
 perl-DBD-MySQL \
 perl-Net-SNMP


# Cleaning up apt to save some space
RUN apt-get clean
RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

COPY [ "./MotoPoll.pl", "/app/MotoPoll.pl" ]
RUN [ "chmod", "+x",  "/app/MotoPoll.pl" ]

ENTRYPOINT [ "/app/MotoPoll.pl" ]
